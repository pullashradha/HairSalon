<head>
  <link rel="stylesheet" href="Content/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="Content/css/styles.css" type="text/css">
</head>
<body>
  <h1 class="page-header">Welcome to the Epicodus Hair Salon!</h1>
  <h2 id="current-stylists-header">Our Stylists</h2>
  <ul>
    @foreach (var stylist in Model)
    {
      <li><a href="/@stylist.GetId()/@stylist.GetName()/client_list">@stylist.GetName()</a></li>
    }
  </ul>
  <h2 id="add-stylist-header">Add a New Stylist</h2>
  <form class="form-group" action="/stylist/new/created" method="post">
    <p>Name: <input type="text" name="stylist-name" class="form-control"></p>
    <p>Phone Number: <input type="text" name="stylist-phone-number" class="form-control"></p>
    <button type="submit" class="btn btn-success">Add Stylist</button>
  </form>
